<div class="block-register show-alert">
  <div class="progress-spinner">
    <div class="spinner-border spinner-color" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
  <div class="container-register">
    <div class="wrap-register">
      <div class="navigate-register">
        <button class="btn-back me-2" onClick="window.location='/'">
          <i class="fa-solid fa-angle-left"></i>
        </button>
      </div>
      <div class="content-register">
        <div class="form-title-register mb-4">ĐĂNG KÝ</div>
        <form id="form-register">
          <div class="row">
            <div class="col-md-6 col-sm-12">
              <div class="label mb-1">Số điện thoại</div>
              <div
                class="wrap-input validate-input"
                data-validate="Phone required"
              >
                <input
                  class="form-control input-square"
                  id="phone"
                  type="number"
                />
              </div>
            </div>
            <div class="col-md-6 col-sm-12">
              <div class="label mb-1">Email</div>
              <div
                class="wrap-input validate-input"
                data-validate="Email required"
              >
                <input
                  class="form-control input-square"
                  id="email"
                  type="text"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 col-sm-12">
              <div class="label mb-1">Họ và tên</div>
              <div
                class="wrap-input validate-input"
                data-validate="Name required"
              >
                <input
                  class="form-control input-square"
                  id="name"
                  type="text"
                />
              </div>
            </div>
            <div class="col-md-6 col-sm-12">
              <div class="label mb-1">Ngày sinh</div>
              <div
                class="wrap-input validate-input"
                data-validate="Birthday required"
              >
                <input
                  class="form-control input-square"
                  id="birthday"
                  type="text"
                  onfocus="(this.type = 'date')"
                  onblur="if (!this.value) this.type = 'text'"
                />
              </div>
            </div>
          </div>
          <div class="label mb-1">Địa chỉ</div>
          <div
            class="wrap-input validate-input"
            data-validate="Address required"
          >
            <input class="form-control input-square" id="address" type="text" />
          </div>
          <div class="label mb-1">CMND mặt trước</div>
          <div class="wrap-input validate-input" data-validate="Image required">
            <input
              class="form-control form-control-lg input-square"
              id="cmnd_front"
              type="file"
            />
          </div>
          <div class="label mb-1">CMND mặt sau</div>
          <div class="wrap-input validate-input" data-validate="Image required">
            <input
              class="form-control form-control-lg input-square"
              id="cmnd_end"
              type="file"
            />
          </div>
          <div class="mt-4">
            <button class="btn btn-next" type="submit">Đăng ký</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
